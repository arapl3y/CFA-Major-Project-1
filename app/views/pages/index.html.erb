              <div class="caption">
                <div class="caption-content">
                  <p>Local Weather (jQuery)</p>
                  <br>
                  <i class="fa fa-search-plus fa-3x"></i>
                </div>
              </div>
              <%#= link_to image_tag('local-weather-min.png'), class: 'img-responsive', alt: 'Local Weather' %>
              <img src="<%= asset_path 'local-weather-min.png' %>" class="img-responsive" alt="Local Weather">
