          <!-- random quote -->
          <div class="col-sm-4 portfolio-item">
            <%#= link_to 'https://quotes.alexrapley.com', class: 'portfolio-link' %>
            <a href="https://quotes.alexrapley.com" class="portfolio-link">
              <div class="caption">
                <div class="caption-content">
                  <p>Design Quote Generator (jQuery)</p>
                  <br>

                  <i class="fa fa-search-plus fa-3x"></i>
                </div>
