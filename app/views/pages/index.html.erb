          <!-- wiki viewer -->
          <div class="col-sm-4 portfolio-item">
            <%#= link_to 'https://wiki.alexrapley.com', class: 'portfolio-link' %>
            <a href="https://wiki.alexrapley.com" class="portfolio-link">
